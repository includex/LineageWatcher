<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="20dp"
                android:height="20dp" />

            <stroke
                android:width="3dp"
                android:color="#ff0000" />
        </shape>

    </item>

    <item
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp">
        <shape android:shape="oval">
            <size
                android:width="6dp"
                android:height="6dp" />

            <stroke
                android:width="1dp"
                android:color="#ffff00" />
        </shape>
    </item>


</layer-list>